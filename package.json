{
  "name": "@arcline/kanuni",
  "version": "0.0.1",
  "description": "Kanuni - The Prompt-Builder Library",
  "main": "./index.js",
  "types": "./index.d.ts",
  "type": "module",
  "author": "Arcline-AI Team",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "build-npm": "npm run build && cp package.json LICENSE.md README.md build",
    "test": "jest",
    "test-watch": "jest --watch",
    "compile-type-tests": "tsc --project tsconfig.compile-tests.json",
    "prod-build": "tsc --sourceMap false --declarationMap false --declaration false",
    "publish-npm": "npm run build-npm && cd build && npm publish && cd -",
    "clean": "rm -rf build",
    "prepare": "husky",
    "lint": "npx prettier . --check",
    "lint-fix": "npx prettier . --write"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.13",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
